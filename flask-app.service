[Unit]
Description=Finnegans Wake Flask App

[Service]
Type=simple
WorkingDirectory=/app
ExecStart=/usr/bin/python3.8 ./application.py
Restart=always

[Service]
User=ec2-user
WorkingDirectory=/app
ExecStart=/usr/local/bin/gunicorn --workers 3 --bind 0.0.0.0:5000 application:app
Restart=always


[Install]
WantedBy=multi-user.target
